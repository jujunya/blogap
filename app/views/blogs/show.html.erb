<div class = blog_box>
   <div class = blog_nickname>
    nickname：<%= @blog.user.nickname %><br>
  </div>

  <div class = blog_content>
    <p>本文</p>
    <%= @blog.content %><br>
  </div>
  <div class = blog_button>
    <% if user_signed_in? && current_user.id == @blog.user_id %>
      <%= link_to "EDIT", "/blogs/#{@blog.id}/edit" , class: "waves-effect waves-light btn" ,method: :get %>
      <%= link_to "DESTORY", "/blogs/#{@blog.id}", class: "waves-effect waves-light btn" ,method: :delete ,
       data: { confirm: "Are you sure?" }  %>
    <% end %>
  </div>
</div>
